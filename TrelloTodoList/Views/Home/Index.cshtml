@{
  ViewBag.Title = "Trello Todo List";
}

<div ng-app="TodoList">
  <div ng-controller="IndexCtrl as indexCtrl">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <p></p>
        <ttl-api-key></ttl-api-key>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <ttl-boards></ttl-boards>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
<script src="https://api.trello.com/1/client.js?key=5e691d31e483de4037b980c9de271630"></script>

@section scripts {
  @Scripts.Render("~/Scripts/angular.js")
  @Scripts.Render("~/Scripts/app/index-ctrl.js")
